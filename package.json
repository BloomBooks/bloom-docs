{
  "name": "bloom-docs",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "simulate-locally": "yarn clear && yarn pull && yarn make-pdf && yarn crowdin:sync && yarn serve",
    "docusaurus": "docusaurus",
    "start": "yarn copy-static-docs && docusaurus start",
    "build": "yarn copy-static-docs && docusaurus build",
    "swizzle": "docusaurus swizzle",
    "deploy": "docusaurus deploy",
    "clear": "docusaurus clear",
    "serve": "docusaurus serve",
    "write-translations": "docusaurus write-translations",
    "write-heading-ids": "docusaurus write-heading-ids",
    "pull": "cross-var docu-notion -n $SIL_BLOOM_DOCS_NOTION_TOKEN -r $SIL_BLOOM_DOCS_NOTION_ROOT_PAGE  --locales en,fr --log-level verbose",
    "copy-static-docs": "cp ./static-docs/*.* ./docs",
    "docu-pdf": "docu-pdf",
    "make-pdf": "bash make-pdf.sh",
    "pull:test": "cross-var docu-notion -n $SIL_BLOOM_DOCS_NOTION_TOKEN -r $SIL_BLOOM_DOCS_NOTION_ROOT_PAGE -m \"./testdocs\" --status-tag test",
    "crowdin": "crowdin",
    "//pretranslate": "  used to re-apply translations when files are renamed or reorganized",
    "crowdin:pretranslate": "crowdin pre-translate --method tm --translate-untranslated-only --translate-with-perfect-match-only --verbose",
    "crowdin:sync with buggy delete-obsolete https://github.com/crowdin/crowdin-cli/issues/489": "docusaurus write-translations && crowdin upload sources --delete-obsolete && crowdin download",
    "crowdin:sync": "docusaurus write-translations && crowdin upload sources && crowdin download"
  },
  "dependencies": {
    "@crowdin/cli": "3.8.1",
    "@docusaurus/core": "^2.1.0",
    "@docusaurus/plugin-ideal-image": "^2.1.0",
    "@docusaurus/preset-classic": "^2.1.0",
    "@easyops-cn/docusaurus-search-local": "^0.30.2",
    "@mdx-js/react": "^1",
    "clsx": "^1.1.1",
    "cross-var": "^1.1.0",
    "docu-pdf": "^1.2.1",
    "prism-react-renderer": "^1.3.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-player": "^2.10.1"
  },
  "devDependencies": {
    "@docusaurus/module-type-aliases": "^2.1.0",
    "@tsconfig/docusaurus": "^1.0.6",
    "docu-notion": "^0.6.1",
    "typescript": "^4.6.4"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
